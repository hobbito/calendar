---
import Button from "../ui/Button.astro";

const { pathname } = Astro.url;
const isCurrentPage = (path: string) => {
  if (path === "/") {
    return pathname === path;
  }
  return pathname.startsWith(path);
};
---

<header class="bg-white border-b border-gray-100 shadow-soft sticky top-0 z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-10">
        <a
          href="/"
          class="shrink-0 flex items-center focus:outline-none focus:ring-2 focus:ring-primary-500 rounded transition-transform hover:scale-105"
        >
          <div class="flex items-end">
            <h1 class="text-xl font-bold leading-none">
              <span
                class="text-primary-600 bg-gradient-to-r from-primary-500 to-primary-600 bg-clip-text text-transparent"
                >Vacation</span
              >
              <span class="text-gray-500">Calendar</span>
            </h1>
            <div
              class="h-1.5 w-1.5 rounded-full bg-primary-400 mb-1 ml-0.5 animate-pulse-slow"
            >
            </div>
          </div>
        </a>

        <nav aria-label="Main navigation" class="relative">
          <ul class="hidden md:flex space-x-1">
            <li>
              <a
                href="/"
                class:list={[
                  "group relative px-3 py-4 text-sm font-medium inline-flex items-center transition-colors",
                  isCurrentPage("/")
                    ? "text-primary-600"
                    : "text-gray-600 hover:text-primary-600",
                ]}
                aria-current={isCurrentPage("/") ? "page" : undefined}
              >
                <span>Calendar</span>
                <span
                  class:list={[
                    "absolute bottom-0 left-0 w-full h-0.5 rounded-full",
                    isCurrentPage("/")
                      ? "bg-primary-500"
                      : "scale-x-0 group-hover:scale-x-100 bg-primary-400 transition-transform origin-left duration-200",
                  ]}></span>
              </a>
            </li>
            <li>
              <a
                href="/requests"
                class:list={[
                  "group relative px-3 py-4 text-sm font-medium inline-flex items-center transition-colors",
                  isCurrentPage("/requests")
                    ? "text-primary-600"
                    : "text-gray-600 hover:text-primary-600",
                ]}
                aria-current={isCurrentPage("/requests") ? "page" : undefined}
              >
                <span>My Requests</span>
                <span
                  class:list={[
                    "absolute bottom-0 left-0 w-full h-0.5 rounded-full",
                    isCurrentPage("/requests")
                      ? "bg-primary-500"
                      : "scale-x-0 group-hover:scale-x-100 bg-primary-400 transition-transform origin-left duration-200",
                  ]}></span>
              </a>
            </li>
            <li>
              <a
                href="/admin"
                class:list={[
                  "group relative px-3 py-4 text-sm font-medium inline-flex items-center transition-colors",
                  isCurrentPage("/admin")
                    ? "text-primary-600"
                    : "text-gray-600 hover:text-primary-600",
                ]}
                aria-current={isCurrentPage("/admin") ? "page" : undefined}
              >
                <span>Admin</span>
                <span
                  class:list={[
                    "absolute bottom-0 left-0 w-full h-0.5 rounded-full",
                    isCurrentPage("/admin")
                      ? "bg-primary-500"
                      : "scale-x-0 group-hover:scale-x-100 bg-primary-400 transition-transform origin-left duration-200",
                  ]}></span>
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="flex items-center space-x-4">
        <Button
          variant="primary"
          size="sm"
          icon="plus"
          class="hidden sm:inline-flex shadow-soft hover:shadow-md transition-shadow"
          data-open-modal
        >
          Request Time Off
        </Button>

        <Button
          variant="primary"
          size="sm"
          icon="plus"
          class="sm:hidden shadow-soft hover:shadow-md transition-shadow"
          aria-label="Request Time Off"
          data-open-modal
        />

        <div class="relative">
          <button
            type="button"
            class="flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-primary-500 transition-transform hover:scale-105"
            id="user-menu-button"
            aria-expanded="false"
            aria-haspopup="true"
          >
            <span class="sr-only">Open user menu</span>
            <div
              class="h-9 w-9 rounded-full overflow-hidden flex items-center justify-center shadow-md bg-gradient-to-br from-primary-400 to-primary-600 text-white"
              aria-hidden="true"
            >
              <span class="text-xs font-medium">JP</span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
