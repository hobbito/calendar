---
import Layout from "../layouts/Layout.astro";
import HeaderComponent from "../components/layout/HeaderComponent.astro";
import Card from "../components/ui/Card.astro";
import Badge from "../components/ui/Badge.astro";
import Button from "../components/ui/Button.astro";
import VacationRequestFormModal from "../components/modals/VacationRequestFormModal.astro";
---

<Layout title="Admin | Vacation Calendar">
  <HeaderComponent />

  <main
    class="flex flex-col min-h-[calc(100vh-4rem)] bg-gradient-to-b from-gray-50 to-white"
  >
    <div
      class="max-w-7xl mx-auto w-full flex-grow px-4 py-6 sm:px-6 lg:px-8 flex flex-col gap-6"
    >
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-4"
      >
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Administration</h1>
          <p class="mt-1 text-sm text-gray-600">
            Manage vacation requests and team settings
          </p>
        </div>

        <div class="flex flex-wrap gap-3">
          <Button
            variant="outline"
            size="md"
            class="shadow-sm bg-white hover:bg-gray-50"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 mr-1.5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Export
          </Button>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <Card
          variant="bordered"
          padding="lg"
          class="rounded-xl shadow-soft bg-white/90 backdrop-blur-sm"
        >
          <div class="flex flex-col">
            <h2 class="text-sm font-medium text-gray-500">Pending Requests</h2>
            <p class="text-2xl font-bold text-gray-900 mt-1">12</p>
            <div class="flex items-center mt-2 text-status-pending text-sm">
              <span class="font-medium">4 new</span>
              <span class="mx-1">·</span>
              <span>last 7 days</span>
            </div>
          </div>
        </Card>

        <Card
          variant="bordered"
          padding="lg"
          class="rounded-xl shadow-soft bg-white/90 backdrop-blur-sm"
        >
          <div class="flex flex-col">
            <h2 class="text-sm font-medium text-gray-500">Team Members</h2>
            <p class="text-2xl font-bold text-gray-900 mt-1">24</p>
            <div class="flex items-center mt-2 text-primary-600 text-sm">
              <span class="font-medium">3 departments</span>
            </div>
          </div>
        </Card>

        <Card
          variant="bordered"
          padding="lg"
          class="rounded-xl shadow-soft bg-white/90 backdrop-blur-sm"
        >
          <div class="flex flex-col">
            <h2 class="text-sm font-medium text-gray-500">
              Vacation Days Used
            </h2>
            <p class="text-2xl font-bold text-gray-900 mt-1">187</p>
            <div class="flex items-center mt-2 text-status-approved text-sm">
              <span class="font-medium">56%</span>
              <span class="mx-1">·</span>
              <span>yearly allocation</span>
            </div>
          </div>
        </Card>

        <Card
          variant="bordered"
          padding="lg"
          class="rounded-xl shadow-soft bg-white/90 backdrop-blur-sm"
        >
          <div class="flex flex-col">
            <h2 class="text-sm font-medium text-gray-500">Holidays</h2>
            <p class="text-2xl font-bold text-gray-900 mt-1">15</p>
            <div class="flex items-center mt-2 text-status-holiday text-sm">
              <span class="font-medium">3 upcoming</span>
              <span class="mx-1">·</span>
              <span>next 30 days</span>
            </div>
          </div>
        </Card>
      </div>

      <Card
        variant="bordered"
        padding="lg"
        class="rounded-xl shadow-card bg-white/90 backdrop-blur-sm"
      >
        <div class="flex flex-col gap-4">
          <div
            class="flex items-center justify-between pb-2 border-b border-gray-100"
          >
            <h2 class="text-lg font-semibold text-gray-800">
              Pending Approvals
            </h2>
            <Button variant="outline" size="sm" class="text-xs bg-white">
              View All
            </Button>
          </div>

          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th
                    scope="col"
                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Employee</th
                  >
                  <th
                    scope="col"
                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Department</th
                  >
                  <th
                    scope="col"
                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Date Range</th
                  >
                  <th
                    scope="col"
                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Days</th
                  >
                  <th
                    scope="col"
                    class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Status</th
                  >
                  <th
                    scope="col"
                    class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >Actions</th
                  >
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <tr>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="flex items-center">
                      <div
                        class="h-8 w-8 rounded-full overflow-hidden flex items-center justify-center bg-gradient-to-br from-primary-400 to-primary-600 text-white mr-3"
                      >
                        <span class="text-xs font-medium">JS</span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          John Smith
                        </div>
                        <div class="text-xs text-gray-500">
                          john.smith@example.com
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">Engineering</div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      Jul 15 - Jul 20, 2025
                    </div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">5</div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <Badge variant="pending" size="sm">Pending</Badge>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap text-right">
                    <div class="flex justify-end space-x-2">
                      <Button
                        variant="outline"
                        size="sm"
                        class="text-xs shadow-sm"
                      >
                        Deny
                      </Button>
                      <Button
                        variant="primary"
                        size="sm"
                        class="text-xs shadow-sm"
                      >
                        Approve
                      </Button>
                    </div>
                  </td>
                </tr>

                <tr>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="flex items-center">
                      <div
                        class="h-8 w-8 rounded-full overflow-hidden flex items-center justify-center bg-gradient-to-br from-primary-400 to-primary-600 text-white mr-3"
                      >
                        <span class="text-xs font-medium">JD</span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          Jane Doe
                        </div>
                        <div class="text-xs text-gray-500">
                          jane.doe@example.com
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">Marketing</div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      Aug 5 - Aug 10, 2025
                    </div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <div class="text-sm text-gray-900">6</div>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap">
                    <Badge variant="pending" size="sm">Pending</Badge>
                  </td>
                  <td class="px-3 py-3 whitespace-nowrap text-right">
                    <div class="flex justify-end space-x-2">
                      <Button
                        variant="outline"
                        size="sm"
                        class="text-xs shadow-sm"
                      >
                        Deny
                      </Button>
                      <Button
                        variant="primary"
                        size="sm"
                        class="text-xs shadow-sm"
                      >
                        Approve
                      </Button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </Card>
    </div>
  </main>

  <VacationRequestFormModal />
</Layout>
