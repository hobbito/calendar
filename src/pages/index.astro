---
import Layout from "../layouts/Layout.astro";
import HeaderComponent from "../components/layout/HeaderComponent.astro";
import CalendarComponent from "../components/calendar/CalendarComponent.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";
import VacationRequestFormModal from "../components/modals/VacationRequestFormModal.astro";
---

<Layout title="Vacation Calendar">
  <HeaderComponent />

  <main
    class="flex flex-col min-h-[calc(100vh-4rem)] bg-gradient-to-b from-gray-50 to-white"
  >
    <div
      class="max-w-7xl mx-auto w-full flex-grow px-4 py-6 sm:px-6 lg:px-8 flex flex-col gap-6"
    >
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-4"
      >
        <div>
          <h1 class="text-2xl font-bold text-gray-800 flex items-center">
            Company Calendar
          </h1>
          <p class="mt-1 text-sm text-gray-600">
            View and manage your team's time off
          </p>
        </div>

        <div class="flex flex-wrap items-center gap-3">
          <Button
            variant="primary"
            size="md"
            icon="plus"
            class="ml-auto md:ml-0 shadow-md hover:shadow-lg transition-shadow"
            data-open-modal
          >
            Request Time Off
          </Button>
        </div>
      </div>

      <div
        class="flex-1 min-h-0 flex flex-col rounded-xl shadow-card overflow-hidden backdrop-blur-sm bg-white/80 border border-gray-100"
      >
        <CalendarComponent />
      </div>

      <Card
        variant="bordered"
        padding="sm"
        class="text-xs rounded-xl shadow-soft bg-white/80 backdrop-blur-sm"
      >
        <h2 class="sr-only">Calendar Legend</h2>
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center">
            <div
              aria-hidden="true"
              class="w-3 h-3 rounded-full bg-status-approved shadow-sm mr-2"
            >
            </div>
            <span class="text-gray-700">Approved</span>
          </div>
          <div class="flex items-center">
            <div
              aria-hidden="true"
              class="w-3 h-3 rounded-full bg-status-pending shadow-sm mr-2"
            >
            </div>
            <span class="text-gray-700">Pending</span>
          </div>
          <div class="flex items-center">
            <div
              aria-hidden="true"
              class="w-3 h-3 rounded-full bg-status-holiday shadow-sm mr-2"
            >
            </div>
            <span class="text-gray-700">Holiday</span>
          </div>
          <div class="flex items-center">
            <div
              aria-hidden="true"
              class="w-3 h-3 rounded-full bg-status-nonworking shadow-sm mr-2"
            >
            </div>
            <span class="text-gray-700">Weekend/Non-Working</span>
          </div>
        </div>
      </Card>
    </div>
  </main>

  <VacationRequestFormModal />
</Layout>
